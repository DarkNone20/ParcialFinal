<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">

    <Button
        android:id="@+id/boton_diarios"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Diarios"
        app:layout_constraintEnd_toStartOf="@+id/boton_semanal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/boton_todos"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="209dp"
        android:backgroundTint="@color/purple_700"
        android:text="Todos"
        app:layout_constraintBottom_toTopOf="@+id/txtbotonC4"
        app:layout_constraintEnd_toStartOf="@+id/boton_mensual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_diarios" />

    <Button
        android:id="@+id/boton_semanal"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Semanal"
        app:layout_constraintBottom_toTopOf="@+id/boton_mensual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton_diarios"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/boton_mensual"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/black"
        android:text="Mensual"
        app:layout_constraintBottom_toTopOf="@+id/txtbotonC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton_todos"
        app:layout_constraintTop_toBottomOf="@+id/boton_semanal" />

    <ImageButton
        android:id="@+id/txtbotonC4"
        android:layout_width="81dp"
        android:layout_height="79dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="Descripci贸n del bot贸n de imagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtbotonC5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/botones" />

    <ImageButton
        android:id="@+id/txtbotonC5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Descripci贸n del bot贸n de imagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtbotonC4"
        app:layout_constraintTop_toBottomOf="@+id/boton_mensual"
        app:srcCompat="@drawable/botones2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="327dp"
        android:layout_height="89dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="100dp"
        android:text="Recordatorios"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/boton_diarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>